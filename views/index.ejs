<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <header class="bg-dark">
    <div class="col-100">
      <h1 class="color-white">
        <%= title %>
      </h1>
    </div>
  </header>

  <section>
    <div class="col-30 bg-grey">
      <form action="/add" method="POST">
        <legend>Incluir nova tarefa</legend>
        <input type="text" name="title" placeholder="Título">
        <textarea name="description" id="" cols="30" rows="10" placeholder="Descrição"></textarea>
        <button type="submit">+ adicionar</button>
      </form>
    </div>
    <div class="col-70">
      <table>
        <tbody id="taskList">
          <% for (let i=0; i < tasks.length; i++) { %>

            <tr>
              <td>#
                <%= i %>
                  <strong>
                    <%= tasks[i].title %>
                  </strong>
              </td>
              <td>
                <a class="actions" href="/turn/1" class="red">
                  <% var done = '' %>
                  <%if(tasks[i].status) {done = 'DONE'} else {done = 'NOT OK'}%>
                  <%= done %>
                </a>
              </td>
              <td class="highlight">
                <%= tasks[i].description %>
              </td>
            </tr>

            <%}  %>
        </tbody>
      </table>
    </div>
  </section>

</body>

</html>